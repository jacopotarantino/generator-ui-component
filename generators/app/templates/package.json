{
  "name": "<%= component_name %>",
  "version": "1.0.0",
  "description": "<%= component_name %> UI Component",
  "main": "index.js",
  "repository": "<% if (init_repository) { %>
    <%= repository_path %>
  <% } %>",
  "license": "UNLICENSED",
  "author": "<%= author_name %> <<%= author_email %>>",
  "scripts": {
    "test": "npm run build && npm run lint && npm run unit && npm run e2e",
    "unit": "./node_modules/.bin/karma start",
    "lint": "./node_modules/.bin/standard",
    "jsdoc": "./node_modules/.bin/jsdoc -p ./source/*.js -d docs",
    "build": "./node_modules/.bin/webpack -p -d",
    "start": "./node_modules/.bin/webpack -p -d --watch",
    "install": "./node_modules/.bin/webdriver-manager update",
    "e2e": "./node_modules/.bin/protractor protractor.config.js",
    "commit": "git add .; ./node_modules/.bin/git-cz"
  },
  "devDependencies": {
    "babel-cli": "^6.3.17",
    "babel-core": "^6.4.0",
    "babel-loader": "^6.2.1",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-runtime": "^6.5.2",
    "babel-polyfill": "^6.5.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-0": "^6.5.0",
    "babel-preset-stage-1": "^6.5.0",
    "babel-runtime": "^6.5.0",
    "commitizen": "^2.6.0",
    "core-decorators": "^0.11.0",
    "css-loader": "^0.23.1",
    "cz-conventional-changelog": "^1.1.5",
    "es6-promise": "3.0.2",
    "gulp": "^3.9.0",
    "gulp-git": "^1.7.0",
    "jade": "^1.11.0",
    "jade-loader": "^0.8.0",
    "jasmine-core": "^2.4.1",
    "jsdoc": "^3.4.0",
    "karma": "^0.13.19",
    "karma-coverage": "^0.5.3",
    "karma-es6-shim": "^0.2.3",
    "karma-jasmine": "^0.3.6",
    "karma-mocha-reporter": "^1.1.5",
    "karma-phantomjs-launcher": "^0.2.3",
    "karma-webpack": "^1.7.0",
    "node-sass": "^3.4.2",
    "node-static": "^0.7.7",
    "phantomjs": "^1.9.19",
    "protractor": "^3.0.0",
    "sass-loader": "^3.1.2",
    "standard": "^5.4.1",
    "webpack": "^1.12.10",
    "webpack-livereload-plugin": "^0.4.0"
  },
  "standard": {
    "ignore": [
      "docs/",
      "dist",
      "**/*-spec.js",
      "protractor.config.js"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
