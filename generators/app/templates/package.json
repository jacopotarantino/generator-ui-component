{
  "name": "<%= component_name %>",
  "version": "1.0.0",
  "description": "<%= component_name %> UI Component",
  "main": "index.js",
  "repository": "<%= repository_path %>",
  "license": "UNLICENSED",
  "author": "<%= author_name %> <<%= author_email %>>",
  "scripts": {
    "test": "npm run-script jsdoc && npm run-script build && ./node_modules/.bin/standard && karma start",
    "jsdoc": "./node_modules/.bin/jsdoc -p ./source/*.js -d docs",
    "build": "./node_modules/.bin/webpack -p -d",
    "start": "./node_modules/.bin/webpack -p -d --watch"
  },
  "devDependencies": {
    "babel-cli": "^6.3.17",
    "babel-core": "^6.4.0",
    "babel-loader": "^6.2.1",
    "babel-preset-es2015": "^6.3.13",
    "css-loader": "^0.23.1",
    "jasmine-core": "^2.4.1",
    "jsdoc": "^3.4.0",
    "karma": "^0.13.19",
    "karma-coverage": "^0.5.3",
    "karma-jasmine": "^0.3.6",
    "karma-mocha-reporter": "^1.1.5",
    "karma-phantomjs-launcher": "^0.2.3",
    "karma-webpack": "^1.7.0",
    "node-sass": "^3.4.2",
    "phantomjs": "^1.9.19",
    "sass-loader": "^3.1.2",
    "standard": "^5.4.1",
    "webpack": "^1.12.10",
    "webpack-livereload-plugin": "^0.4.0"
  },
  "standard": {
    "ignore": [
      "docs/",
      "dist",
      "**/*-spec.js"
    ]
  }
}
